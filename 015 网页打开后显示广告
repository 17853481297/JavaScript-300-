<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>网页打开后显示广告和关闭</title>
<script>
	function showAdPic(){
		var ad = document.getElementById('ad');
		ad.innerHTML = '<img width="300px" height="200px">'
		}
	setInterval(function(){
		var ad = document.getElementById('ad');
		ad.style.display = "none";
		},5000);
	window.onload = showAdPic;
</script>
</head>

<body style="text-align:center";>
	<p>上边</p>
    <P id="ad"></P>
    <p>下边</p>
</body>
</html>
